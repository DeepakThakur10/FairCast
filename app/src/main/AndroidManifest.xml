<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FairCast"
        tools:targetApi="31">
        <activity
            android:name=".CandidateListActivity"
            android:exported="false" />
        <activity
            android:name=".CollegeVoteActivity"
            android:exported="false"
            android:label="@string/title_activity_college_detail"
            android:theme="@style/Theme.FairCast" />
        <activity
            android:name=".CollegeSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ThankYouActivity"
            android:exported="false" />
        <activity
            android:name=".VoteActivity"
            android:exported="false" />
        <activity
            android:name=".VillageSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".DataReteirve"
            android:exported="false" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard" /> <!-- SplashActivity is the entry point now -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- All other activities -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ElectionListActivity"
            android:exported="false" />
        <activity
            android:name=".VoteConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".BiometricLoginActivity"
            android:exported="false" />
        <activity
            android:name=".QrLoginActivity"
            android:exported="false" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />
    </application>

</manifest>