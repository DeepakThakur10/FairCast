<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Image Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/btnChangeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Image"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Form Fields Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <!-- Full Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your full name"
                    android:enabled="false"
                    android:background="@drawable/input_background_disabled"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your email"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/input_background_disabled"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Voter ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Voter ID"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etVoterId"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your voter ID"
                    android:enabled="false"
                    android:background="@drawable/input_background_disabled"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your phone number"
                    android:enabled="false"
                    android:inputType="phone"
                    android:background="@drawable/input_background_disabled"
                    android:paddingHorizontal="12dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter your complete address"
                    android:enabled="false"
                    android:inputType="textPostalAddress|textMultiLine"
                    android:background="@drawable/input_background_disabled"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="12dp"
                    android:gravity="top|start"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:minLines="3"
                    android:maxLines="4" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Edit Profile"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Logout"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_danger"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Motivational Quote Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quote_background"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/quoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every vote matters in shaping our future.\"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/text_primary"
            android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>