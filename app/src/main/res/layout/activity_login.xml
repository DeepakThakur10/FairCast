<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Gradient Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gradient_header"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_vote_logo"
                android:contentDescription="App Logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FairCast"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure Digital Democracy"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to cast your vote securely"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Voter ID -->
        <EditText
            android:id="@+id/etVoterId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Voter ID"
            android:drawableStart="@drawable/ic_id"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="8dp" />

        <!-- Remember Me + Forgot Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cbRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me" />

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#FF5722"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Sign In Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In to Vote"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/gradient_end"
            android:layout_marginBottom="16dp" />

        <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or continue with"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginVertical="12dp" />

        <!-- Biometric Authentication -->
        <Button
            android:id="@+id/btnBiometric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biometric Authentication"
            android:drawableStart="@drawable/ic_face"
            android:drawablePadding="8dp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- QR Code Login -->
        <Button
            android:id="@+id/btnQRLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Code Login"
            android:drawableStart="@drawable/ic_qr_code"
            android:drawablePadding="8dp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Register -->
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Register as a Voter"
            android:textColor="#00695C"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Secured with 256-bit encryption"
            android:textSize="12sp"
            android:textColor="#4CAF50"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
