<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="16dp"
    android:scrollbars="vertical"
    android:fadeScrollbars="true"
    android:scrollbarFadeDuration="2000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient_bg"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ¡ Select Your Village"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your village to participate in fair voting"
                android:textSize="14sp"
                android:textColor="#E3F2FD"
                android:gravity="center"
                android:alpha="0.9"/>
        </LinearLayout>

        <!-- Search and Reset -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bar_bg"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search villages..."
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:inputType="text" />

            <TextView
                android:id="@+id/resetSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âŒ"
                android:textSize="18sp"
                android:paddingStart="12dp"
                android:paddingEnd="4dp" />
        </LinearLayout>

        <!-- No Results Message -->
        <TextView
            android:id="@+id/noResultsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”´ No results found"
            android:textColor="#B00020"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Village Count Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š 20 Villages Available"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bihar State"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Village List Container -->
        <LinearLayout
            android:id="@+id/villageListContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Footer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/footer_bg"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Select your village to proceed with voting\nâ€¢ All villages are verified and registered\nâ€¢ Your selection will be saved for this session"
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
